<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>
    <%= title %>
  </title>
  <link rel="icon" type="image/x-icon" href="/images/icon.ico" />
  <link rel="stylesheet" href="/css/resumos.css" />
  <link href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css" rel="stylesheet" />
</head>

<body>
  <%- include('components/nav') %>

    <main class="main-content">
      <h1 class="page-title">Resumos e Fórmulas</h1>

      <% const formulas={ matematica: [ { titulo: 'Teorema de Pitágoras' , expressao: 'a² + b² = c²' }, {
        titulo: 'Fórmula de Bhaskara' , expressao: 'x = (-b ± √(b² - 4ac)) / 2a' }, { titulo: 'Área do Círculo' ,
        expressao: 'A = πr²' }, { titulo: 'Perímetro do Retângulo' , expressao: 'P = 2(l + w)' } ], fisica: [ {
        titulo: 'Lei de Newton' , expressao: 'F = ma' }, { titulo: 'Equação da Cinemática' , expressao: 'v = u + at' },
        { titulo: 'Energia Cinética' , expressao: 'Ec = ½mv²' }, { titulo: 'Trabalho de uma Força' ,
        expressao: 'T = F·d·cos(θ)' } ], quimica: [ { titulo: 'Lei dos Gases Ideais' , expressao: 'PV = nRT' }, {
        titulo: 'Equação de Arrhenius' , expressao: 'k = Ae^(-Ea/RT)' }, { titulo: 'Concentração Molar' ,
        expressao: 'M = n / V' }, { titulo: 'Relação de pH' , expressao: 'pH = -log[H⁺]' } ], programacao: [ {
        titulo: 'Conversão Celsius → Fahrenheit' , expressao: 'F = (C × 9/5) + 32' }, {
        titulo: 'Conversão Fahrenheit → Celsius' , expressao: 'C = (F - 32) × 5/9' }, {
        titulo: 'Conversão de segundos para minutos' , expressao: 'min = s / 60' }, {
        titulo: 'Conversão de bytes para kilobytes' , expressao: 'KB = bytes / 1024' }, {
        titulo: 'Regra de três simples' , expressao: '(A × B) / C' }, { titulo: 'Operador lógico AND' ,
        expressao: 'A && B' }, { titulo: 'Operador lógico OR' , expressao: 'A || B' }, { titulo: 'Operador ternário' ,
        expressao: 'condição ? valor1 : valor2' }, { titulo: 'Porcentagem de um número' ,
        expressao: '(porcentagem × valor) / 100' } ] }; %>

        <!-- matematica -->
        <section class="section">
          <h2 class="section-title">Fórmulas de Matemática</h2>
          <p class="section-description">
            Confira abaixo algumas das fórmulas mais importantes para o estudo da Matemática:
          </p>
          <ul class="formula-list">
            <% formulas.matematica.forEach(formula=> { %>
              <li><strong>
                  <%= formula.titulo %>:
                </strong>
                <%= formula.expressao %>
              </li>
              <% }) %>
          </ul>
        </section>

        <!-- fisica -->
        <section class="section">
          <h2 class="section-title">Fórmulas de Física</h2>
          <p class="section-description">
            Aqui estão algumas fórmulas fundamentais para o estudo da Física:
          </p>
          <ul class="formula-list">
            <% formulas.fisica.forEach(formula=> { %>
              <li><strong>
                  <%= formula.titulo %>:
                </strong>
                <%= formula.expressao %>
              </li>
              <% }) %>
          </ul>
        </section>

        <!-- quimica -->
        <section class="section">
          <h2 class="section-title">Fórmulas de Química</h2>
          <p class="section-description">
            Veja algumas das fórmulas essenciais para a Química:
          </p>
          <ul class="formula-list">
            <% formulas.quimica.forEach(formula=> { %>
              <li><strong>
                  <%= formula.titulo %>:
                </strong>
                <%= formula.expressao %>
              </li>
              <% }) %>
          </ul>
        </section>

        <!-- programacao -->
        <section class="section">
          <h2 class="section-title">Fórmulas e Conversões Úteis para Programação</h2>
          <p class="section-description">
            Estas expressões são muito comuns durante o desenvolvimento de softwares:
          </p>
          <ul class="formula-list">
            <% formulas.programacao.forEach(formula=> { %>
              <li><strong>
                  <%= formula.titulo %>:
                </strong>
                <%= formula.expressao %>
              </li>
              <% }) %>
          </ul>
        </section>
    </main>

    <%- include('components/footer') %>
      <script src="/js/main.js"></script>
</body>

</html>